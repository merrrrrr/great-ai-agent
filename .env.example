# AWS Configuration
AWS_REGION=ap-southeast-5
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 (Media Storage)
S3_BUCKET=greataient-media

# DocumentDB (MongoDB-compatible)
DB_URI=mongodb://username:password@your-docdb-cluster:27017/greataient?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
DB_NAME=greataient

# API Gateway
API_BASE_URL=https://your-api-gateway-id.execute-api.ap-southeast-5.amazonaws.com/dev

# Bedrock Models
BEDROCK_TEXT_MODEL=anthropic.claude-v2
