# AWS Configuration
AWS_REGION=ap-southeast-5
BEDROCK_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 (Media Storage) - Malaysia region
S3_BUCKET=great-ai-agent-media

# DocumentDB (MongoDB-compatible)
DB_URI=mongodb://username:password@your-docdb-cluster:27017/great-ai-agent?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
DB_NAME=great-ai-agent

# API Gateway - Malaysia region
API_BASE_URL=https://your-api-gateway-id.execute-api.ap-southeast-5.amazonaws.com/dev

# Bedrock Models - US East region
BEDROCK_TEXT_MODEL=meta.llama3-8b-instruct-v1:0
BEDROCK_IMAGE_MODEL=amazon.titan-image-generator-v1

# Polly (Optional Voiceover)
POLLY_VOICE=Joanna
